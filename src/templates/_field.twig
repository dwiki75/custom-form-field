<div class="mb-4">
    <label class="block text-gray-700 font-medium mb-1">
        {{ settings.label }}{% if settings.required %} <span class="text-red-500">*</span>{% endif %}
    </label>
    <input 
        type="{{ settings.type }}" 
        placeholder="{{ settings.placeholder }}" 
        {% if settings.required %}required{% endif %}
        class="border border-gray-300 rounded-md p-2 w-full focus:ring-2 focus:ring-blue-500 focus:outline-none"
    >
</div>